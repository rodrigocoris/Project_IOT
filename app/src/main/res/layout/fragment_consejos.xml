<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    tools:context=".fragment_consejos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back3">

        <!-- Title -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="315dp"
            android:layout_height="74dp"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corners"
            android:text="Consejos para cuidar tu cultivo"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cuad1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Centered Image -->

        <!-- Cuadro 1 -->

        <!-- Cuadro 2 -->

        <VideoView
            android:id="@+id/videoView1"
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/cuad2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cuad1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad1"
            android:layout_width="245dp"
            android:layout_height="65dp"
            android:layout_margin="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="46dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintBottom_toTopOf="@+id/videoView1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.005"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo">

            <TextView
                android:id="@+id/texto1"
                android:layout_width="106dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:text="Chiles"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/imag1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rec1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Chile Piquín"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texto1" />

            <ImageView
                android:id="@+id/imag1"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/chile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cuadro 3 -->

        <!-- Cuadro 4 -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad2"
            android:layout_width="198dp"
            android:layout_height="73dp"
            android:layout_margin="16dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintBottom_toTopOf="@+id/cuad4"
            app:layout_constraintEnd_toStartOf="@+id/cuad3"
            app:layout_constraintStart_toStartOf="@+id/cuad1">

            <TextView
                android:id="@+id/texto2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_corners"
                android:text="Regar"
                android:textAlignment="viewStart"
                android:textColor="@color/verde2"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/imag2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_corners"
                android:text="Diariamente"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texto2" />

            <ImageView
                android:id="@+id/imag2"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/regar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad3"
            android:layout_width="198dp"
            android:layout_height="73dp"
            android:layout_margin="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintBottom_toTopOf="@+id/cuad4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cuad2">

            <TextView
                android:id="@+id/texto3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_corners"
                android:text="Fertilizar"
                android:textAlignment="viewStart"
                android:textColor="@color/verde2"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/imag3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_corners"
                android:text="Cada 4 a 6 semanas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texto3" />

            <ImageView
                android:id="@+id/imag3"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/fertilizante"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad4"
            android:layout_width="430dp"
            android:layout_height="147dp"
            android:layout_margin="16dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/texto4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_corners"
                android:text="Trasplantar"
                android:textAlignment="viewStart"
                android:textColor="@color/verde2"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/imag4"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rec4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners"
                android:text="Entre 6 a 8 semanas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texto4" />

            <TextView
                android:id="@+id/rec9"
                android:layout_width="369dp"
                android:layout_height="65dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded_corners"
                android:text="El trasplante de las plantas de chile piquín debe realizarse cuando las plántulas tienen entre 6 y 8 semanas de edad o han desarrollado al menos 4 a 6 hojas verdaderas. Elige un día nublado o trasplanta por la tarde para evitar el calor "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/texto4" />

            <ImageView
                android:id="@+id/imag4"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/maceta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.132" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

