<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_recordatorios">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back3">

        <!-- Title -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corners"
            android:text="Establezca recordatorios de cuidado"
            android:textAlignment="center"
            android:textColor="@color/gris"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Centered Image -->
        <ImageView
            android:id="@+id/imagcenter"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/jardineria"
            app:layout_constraintBottom_toTopOf="@+id/cuad1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintWidth_percent="0.9" />

        <!-- Cuadro 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad1"
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagcenter">

            <ImageView
                android:id="@+id/imag1"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/regar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/texto1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="30dp"
                android:text="Agua"
                android:textAlignment="viewStart"
                android:textColor="@color/verde2"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/rec1"
                app:layout_constraintStart_toEndOf="@id/imag1"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/rec1"
                android:layout_width="159dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-35dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorYellow"
                android:text="Agregar"
                android:textColor="@color/verde2"
                app:icon="@android:drawable/ic_input_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/texto1"
                app:layout_constraintTop_toBottomOf="@id/texto1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cuadro 2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad2"
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cuad1">

            <ImageView
                android:id="@+id/imag2"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/fertilizante"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="35dp"
                android:text="Trasplantar"
                android:textAlignment="viewStart"
                android:textColor="@color/verde2"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/rec2"
                app:layout_constraintStart_toEndOf="@id/imag2"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/rec2"
                android:layout_width="159dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-35dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorYellow"
                android:text="Agregar"
                android:textColor="@color/verde2"
                app:icon="@android:drawable/ic_input_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/texto2"
                app:layout_constraintTop_toBottomOf="@id/texto2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Cuadro 3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuad3"
            android:layout_width="390dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cuad2">

            <ImageView
                android:id="@+id/imag3"
                android:layout_width="73dp"
                android:layout_height="54dp"
                android:src="@drawable/maceta"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/texto3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="35dp"
                android:text="Fertilizar"
                android:textAlignment="viewStart"
                android:textColor="@color/verde2"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/rec3"
                app:layout_constraintStart_toEndOf="@id/imag3"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/rec3"
                android:layout_width="159dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-35dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorYellow"
                android:text="Agregar"
                android:textColor="@color/verde2"
                app:icon="@android:drawable/ic_input_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/texto3"
                app:layout_constraintTop_toBottomOf="@id/texto3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- TextView for displaying added reminders with title -->
        <TextView
            android:id="@+id/textView_reminders"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corners2"
            android:padding="16dp"
            android:text="Tus recordatorios:\n"
            android:textColor="@color/verde2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cuad3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
